using System;
namespace Chapter5
{
    internal class Program
    {
        public static uint Ack(uint m, uint n) //using uint since it only takes non negative numbers
        {
            if (m == 0)
            {
                return n + 1;
            }
            else if (n == 0 && m > 0)
            {
                return Ack(m - 1, 1);
            }
            else //m and n == 0 have both been checked
            {
                return Ack(m - 1, Ack(m, n - 1));
            }

        }

        public static void Main(string[] args)
        {
            Console.WriteLine(Ack(3,3));
        }
    }
}
