using System;

namespace QuestionTwo
{
    internal class Recurse
    {
        static void Main(string[] args)
        {
            Console.WriteLine(First("Hello!"));
            Console.WriteLine("");
            Console.WriteLine(Rest("Hello!"));
            Console.WriteLine("");
            Console.WriteLine(Length("Hello!"));
            Console.WriteLine("");
            WriteString("Hello!");
            Console.WriteLine("");
            WriteBackward("Hello!");
            Console.WriteLine("");
            Console.WriteLine(ReverseString("Hello!"));


        }

        // first: returns the first character of the given string
        public static char First(string s)
        {
            return s[0];
        }

        // rest: returns a new string that contains all but the
        // first letter of the given string
        public static string Rest(string s)
        {
            return s.Substring(1);
        }

        // length: returns the length of the given string
        public static int Length(string s)
        {
            return s.Length;
        }

        public static void WriteString(string s)
        {
            int sLength = s.Length;
            int i = 0;

            while (i != sLength)
            {
                Console.WriteLine(s[i]);
                i += 1;
            }

        }
        public static void WriteBackward(string s)
        {
            int sLength = s.Length;

            while (sLength != 0)
            {
                Console.WriteLine(s[sLength - 1]);
                sLength -= 1;
            }
        }
        public static string ReverseString(string s)
        {
            int sLength = s.Length - 1;
            string backwards = "";

            while (sLength >= 0)
            {
                backwards += s[sLength];
                sLength -= 1;
            }
            return backwards;
        }
    }
}
