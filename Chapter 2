Exercise 2.2

using System;
namespace Date
{
    internal class Program
    {
        public static void Main(string[] args)
        {
            //initialize all the variables, date and year could be a string in this problem
            string day, month;
            int date, year;

            //question 2, assign all variables
            day = "Saturday";
            date = 25;
            month = "June";
            year = 2022;

            //question 3, printing them all to see the output 
            Console.WriteLine(day);
            Console.WriteLine(date);
            Console.WriteLine(month);
            Console.WriteLine(year);
            Console.WriteLine();

            //question 4
            Console.WriteLine("European format:");
            Console.WriteLine(day + " " + date + " " + month + ", " + year);
            Console.WriteLine();

            //question 5
            Console.WriteLine("American format:");
            Console.WriteLine(day + ", " + month + " " + date + ", " + year);
            Console.WriteLine("European format:");
            Console.WriteLine(day + " " + date + " " + month + ", " + year);
        }
    }
}

Exercise 2.3

using System;
namespace Time
{
    internal class Program
    {
        public static void Main(string[] args)
        {
            //initialize the variable
            int hour, minutes, seconds;

            //assign the variables
            hour = 13; //using a 24 hour clock so 13=1pm
            minutes = 50;
            seconds = 35;

            int fromMidnight = ((hour * 60) + minutes) * 60 + seconds; //convert hour and minute to seconds
            int secondsOneDay = 86400; //total seconds in one day

            //question 3
            Console.WriteLine("Seconds since midnight: " + fromMidnight);

            //question 4
            Console.WriteLine("Seconds remaining in the day: " + (secondsOneDay - fromMidnight));

            //question 5
            Console.WriteLine("Percentage of the day complete " + (fromMidnight * 100 / secondsOneDay) + "%");

        }
    }
}
