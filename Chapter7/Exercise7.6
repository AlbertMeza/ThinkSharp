using System;

namespace ThinkSharp
{
    internal class MysteryClass
    {
        static void Main(string[] args)
        {
            Console.WriteLine(Mystery("Allen"));
        }
        public static string Mystery(string s)
        {
            int i = s.Length - 1;
            string total = "";

            while (i >= 0)
            {
                char ch = s[i];
                Console.WriteLine(i + "     " + ch);

                total = total + ch;
                i--;
            }
            return total;
        }
    }
}

