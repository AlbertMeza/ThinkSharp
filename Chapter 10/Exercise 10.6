using System;

namespace Chapter10
{
    internal class Program
    {
        public static void Main(string[] args)
        {
            int[] threes = { 3, 6, 9, 12, 15, 18, 21, 24 };

            Console.WriteLine(findTarget(threes, 18));
            Console.WriteLine(findTarget(threes, 17));
        }
        
        public static int findTarget(int[] intArr, int n)
        {
            for (int i = 0; i < intArr.Length; i++)
            {
                if (intArr[i] == n) return i;
            }
            return -1;
        }
	}
}
