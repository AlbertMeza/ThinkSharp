using System;

namespace Chapter10
{
    internal class Program
    {
        public static void Main(string[] args)
        {
            int[] threes = { 3, 6, 9, 12, 15, 18, 21, 24 };

            Console.WriteLine(AreFactors(threes, 3));
            Console.WriteLine(AreFactors(threes, 2));
        }
        
        public static bool AreFactors(int[] intArr, int n)
        {
            for (int i = 0; i < intArr.Length; i++)
            {
                if (intArr[i] % n != 0) return false;
            }
            return true;
        }
	}
}
